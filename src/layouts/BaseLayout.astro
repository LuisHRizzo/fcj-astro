---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { loadDict, getTrans } from "../i18n/utils";
const { lang = 'es' } = Astro.props as { lang?: string };
const dict = await loadDict(lang);
const title = getTrans(dict, 'meta.siteName', 'Astro Site');
const tagline = getTrans(dict, 'meta.tagline', '');
---

<html lang={lang} class="scroll-smooth antialiased">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={tagline} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Jost:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-dvh flex flex-col bg-gray-50 text-slate-800 font-sans">
    <header class="border-b border-slate-200">
      <Navbar {lang} {dict} />
    </header>
    <main class="flex-1 pt-16">
      <slot />
    </main>
    <footer class="border-t border-slate-200">
      <Footer {lang} {dict} />
    </footer>
  </body>
</html>
