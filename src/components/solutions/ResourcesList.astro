---
type Item = { title: string; href: string };
const { items = [] } = Astro.props as { items: Item[] };
---
<section class="py-10 md:py-12 bg-white">
  <div class="container mx-auto max-w-7xl px-4">
    <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">Recursos</h2>
    <div class="mt-6 grid gap-6 sm:grid-cols-2">
      {items.map((it) => (
        <a href={it.href} class="card p-5 hover:shadow-md transition" download>
          <div class="flex items-center justify-between gap-3">
            <div>
              <h3 class="font-bold">{it.title}</h3>
              <p class="mt-1 text-xs text-neutral-500">PDF Â· descarga directa</p>
            </div>
            <svg class="h-5 w-5 shrink-0" viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 10l5 5 5-5M12 15V3M5 19h14" />
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
