---
type Labels = { name?: string; email?: string; org?: string; sector?: string; submit?: string };
type Props = {
  lang: string;
  dict: any;
  formEndpoint?: string;
  mailtoFallback?: string;
  labels?: Labels;
};
const { formEndpoint = "", mailtoFallback = "info@cienciayjusticia.org", labels = {} } = Astro.props as Props;
const L = { name: labels.name ?? "Nombre", email: labels.email ?? "Email", org: labels.org ?? "Institución", sector: labels.sector ?? "Sector", submit: labels.submit ?? "Enviar" };
---
<section class="py-12 md:py-16">
  <div class="container mx-auto max-w-7xl px-4">
    <div class="rounded-3xl border p-6 sm:p-8">
      <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">Solicita tu asesoría</h2>
      <p class="mt-2 text-neutral-600">Completa el formulario y nuestro equipo se pondrá en contacto.</p>

      <form class="mt-6 grid gap-4 md:grid-cols-2" data-lead-form data-endpoint={formEndpoint} data-mailto={mailtoFallback} novalidate>
        <div>
          <label class="text-sm font-medium">{L.name}</label>
          <input name="name" required class="mt-1 w-full rounded-lg border px-3 py-2 text-sm" />
        </div>
        <div>
          <label class="text-sm font-medium">{L.email}</label>
          <input type="email" name="email" required class="mt-1 w-full rounded-lg border px-3 py-2 text-sm" />
        </div>
        <div>
          <label class="text-sm font-medium">{L.org}</label>
          <input name="org" class="mt-1 w-full rounded-lg border px-3 py-2 text-sm" />
        </div>
        <div>
          <label class="text-sm font-medium">{L.sector}</label>
          <select name="sector" class="mt-1 w-full rounded-lg border px-3 py-2 text-sm">
            <option>Sector público</option>
            <option>ONG / Social</option>
            <option>Educación</option>
            <option>Salud</option>
            <option>Otro</option>
          </select>
        </div>

        <div class="md:col-span-2">
          <button type="submit" data-submit class="btn btn-primary">{L.submit}</button>
          <p class="mt-2 text-xs text-neutral-500" data-msg aria-live="polite"></p>
        </div>

        <!-- honeypot -->
        <input type="text" name="company" tabindex="-1" autocomplete="off" class="hidden" />
      </form>
    </div>
  </div>

  <script is:inline>
    (() => {
      const root = document.currentScript?.closest('section');
      const form = root?.querySelector('[data-lead-form]');
      if (!form) return;

      const endpoint = form.getAttribute('data-endpoint') || '';
      const mailto  = form.getAttribute('data-mailto') || 'info@cienciayjusticia.org';
      const btn     = form.querySelector('[data-submit]');
      const msg     = form.querySelector('[data-msg]');
      const hp      = form.querySelector('input[name="company"]');

      const setLoading = (v) => { if (!btn) return; btn.disabled = v; btn.setAttribute('aria-busy', String(v)); };
      const showMsg = (text, ok) => { if (!msg) return; msg.textContent = text; msg.className = "mt-2 text-xs " + (ok ? "text-green-700" : "text-red-700"); };

      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        if (hp && hp.value) return;

        const data = Object.fromEntries(new FormData(form));
        const payload = {
          ...data,
          _subject: "Solicitud de demo/asesoría (Transformación Digital IA)",
          message: `Nombre: ${data.name}\nEmail: ${data.email}\nInstitución: ${data.org}\nSector: ${data.sector}`
        };

        if (!endpoint) {
          const body = `Solicitud de demo/asesoría:%0D%0A%0D%0ANombre: ${data.name}%0D%0AEmail: ${data.email}%0D%0AInstitución: ${data.org}%0D%0ASector: ${data.sector}`;
          window.location.href = `mailto:${mailto}?subject=Solicitud IA&body=${body}`;
          return;
        }

        try {
          setLoading(true);
          const res = await fetch(endpoint, { method: "POST", headers: { "Content-Type": "application/json" }, body: JSON.stringify(payload) });
          if (res.ok) { showMsg("¡Gracias! Te contactaremos a la brevedad.", true); (form as any).reset?.(); }
          else        { showMsg("Hubo un problema al enviar. Intenta nuevamente.", false); }
        } catch {
          showMsg("Hubo un problema al enviar. Intenta nuevamente.", false);
        } finally { setLoading(false); }
      });
    })();
  </script>
</section>
