---
type Item = { value: string; label: string };
const { title = "Impacto", items = [] } = Astro.props as { title?: string; items: Item[] };
---

<section class="py-8 md:py-10">
  <div class="container mx-auto max-w-7xl px-4">
    {title && <h2 class="text-xl sm:text-2xl font-extrabold tracking-tight">{title}</h2>}
    <div class="mt-5 grid gap-4 sm:grid-cols-3">
      {items.map((k) => (
        <div class="rounded-2xl border bg-white p-6 text-center shadow-sm">
          <div class="text-3xl sm:text-4xl font-extrabold tracking-tight">{k.value}</div>
          <div class="mt-1 text-sm text-neutral-600">{k.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>
