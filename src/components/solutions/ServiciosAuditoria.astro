---
import { getTrans } from "../../i18n/utils";

type Item = {
  img: string;
  alt?: string;
  titleKey?: string;
  titleFallback?: string;
  descKey?: string;
  descFallback?: string;
};

type Props = {
  lang?: string;
  dict: any;
  sectionId?: string;
  overlineKey?: string;
  titleKey?: string;
  leadKey?: string;
  items?: Item[];
};

const {
  lang = "es",
  dict,
  sectionId = "audit-platform-problems",
  overlineKey = "solutions.auditPlatform.problems.overline",
  titleKey = "solutions.auditPlatform.problems.heading",
  leadKey = "solutions.auditPlatform.problems.lead",
  items,
} = Astro.props as Props;

const t = (k: string, fb?: string) => getTrans(dict, k, fb);

// Utilidad para leer anidado desde dict con fallback
const get = (path: string, fb: any) =>
  path.split(".").reduce((acc: any, k: string) => (acc && acc[k] != null ? acc[k] : null), dict) ?? fb;

// 1) Traemos problemas desde i18n (array de strings)
const rawProblems = get("solutions.auditPlatform.problems.items", []) as string[];

// 2) Los mapeamos a items con espacio para IMÁGENES (sin iconos).
//    Colocá tus imágenes en /assets/ con estos nombres o sobreescribí via props.items
const mappedFromI18n: Item[] = rawProblems.map((p, i) => ({
  img: `/assets/audit-problem-${i + 1}.png`, // reemplazá con tus archivos reales
  alt: p,
  titleFallback: p,
  descFallback: "", // si querés sumar una bajada por item, completá aquí o vía descKey
}));

// 3) Items por defecto (usa i18n si existe; si no, fallbacks)
const defaultItems: Item[] =
  mappedFromI18n.length
    ? mappedFromI18n
    : [
        {
          img: "/assets/audit-problem-1.png",
          alt: "Procesos manuales y alta carga administrativa al preparar auditorías",
          titleFallback: "Procesos manuales y alta carga administrativa al preparar auditorías",
          descFallback: "",
        },
        {
          img: "/assets/audit-problem-2.png",
          alt: "Cambios normativos frecuentes y escasez de expertise técnico",
          titleFallback: "Cambios normativos frecuentes y escasez de expertise técnico",
          descFallback: "",
        },
        {
          img: "/assets/audit-problem-3.png",
          alt: "Dificultad para generar evidencia y reporting audit-ready",
          titleFallback: "Dificultad para generar evidencia y reporting audit-ready",
          descFallback: "",
        },
      ];

const list = items ?? defaultItems;
---

<section id={sectionId} class="py-12 md:py-16">
  <div class="container mx-auto max-w-7xl px-4">
    <p class="text-sm font-semibold text-neutral-500">
      {t(overlineKey, "Problemas")}
    </p>
    <h2 class="mt-2 text-3xl sm:text-4xl lg:text-5xl font-extrabold tracking-tight leading-tight max-w-4xl">
      {t(titleKey, "Problema central")}
    </h2>
    <p class="mt-5 max-w-3xl text-neutral-600">
      {t(
        leadKey,
        "Principales obstáculos que encarecen y complejizan la preparación y ejecución de auditorías."
      )}
    </p>

    <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-3">
      {list.map((it: Item) => (
        <article class="group card p-5 text-center">
          <div class="rounded-xl bg-transparent aspect-[16/10] flex items-center justify-center overflow-hidden">
            <img
              src={it.img}
              alt={it.alt ?? ""}
              class="h-full w-full object-contain"
              loading="lazy"
            />
          </div>
          <h3 class="mt-6 text-2xl font-bold leading-tight">
            {t(it.titleKey ?? "", it.titleFallback ?? "")}
          </h3>
          {/* Render condicional de la descripción solo si existe */}
          {((it.descKey && t(it.descKey, "")) || it.descFallback) && (
            <p class="mt-3 text-sm text-neutral-600">
              {t(it.descKey ?? "", it.descFallback ?? "")}
            </p>
          )}
        </article>
      ))}
    </div>
  </div>
</section>
