---
type Props = { lang: string; dict: any; title: string; paragraphs: string[] };
const { title, paragraphs } = Astro.props as Props;
---
<section class="py-10 md:py-12">
  <div class="container mx-auto max-w-7xl px-4">
    <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">{title}</h2>
    <div class="mt-3 space-y-4 text-neutral-700">
      {paragraphs.map((p) => <p>{p}</p>)}
    </div>
  </div>
</section>
