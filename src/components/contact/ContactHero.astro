---
const { dict } = Astro.props as any;
const t = (k: string, fb?: string) => (dict && dict.contact && dict.contact.hero && dict.contact.hero[k]) || fb || "";
---

<section class="py-16 md:py-24 bg-white">
  <div class="container mx-auto max-w-7xl px-4">
    <div class="max-w-3xl">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-extrabold tracking-tight">
        {t("title", "Contáctanos Hoy")}
      </h1>
      <p class="mt-4 text-neutral-700">
        {t("subtitle", "Estamos aquí para ayudarte. Llámanos o envíanos un correo y concertemos una reunión.")}
      </p>
    </div>
  </div>
</section>
