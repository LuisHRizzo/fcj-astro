      </div> -->

      <!-- Offices -->
      <div>
        <div class="mx-auto mb-4 h-10 w-10 text-neutral-900">
          <svg viewBox="0 0 24 24" class="h-10 w-10" fill="none" stroke="currentColor" stroke-width="1.8">
            <path d="M12 21s-7-5.33-7-11a7 7 0 1 1 14 0c0 5.67-7 11-7 11Z" />
            <circle cx="12" cy="10" r="2.5" />
          </svg>
        </div>
        <h3 class="text-xl font-extrabold">{t("officesTitle", "Oficinas")}</h3>
        <p class="mt-2 text-neutral-700 max-w-sm mx-auto">{t("officesDesc", "Presencia en Américas y Europa.")}</p>
        <a href={officesHref} class="mt-3 inline-block font-medium underline decoration-neutral-300 hover:decoration-neutral-700">
          {t("officesCta", "Buscar la oficina más cercana")}
        </a>
