---
const { dict, email = "info@cienciayjusticia.org", phone = "", officesHref = "#" } = Astro.props as any;
const t = (k: string, fb: string) => dict?.contact?.quick?.[k] ?? fb ?? "";
---

<section class="py-12 md:py-16 bg-white">
  <div class="container mx-auto max-w-7xl px-4">
    <div class="grid gap-12 md:grid-cols-2 text-center">
      <!-- Email -->
      <div>
        <div class="mx-auto mb-4 h-10 w-10 text-neutral-900">
          <svg viewBox="0 0 24 24" class="h-10 w-10" fill="none" stroke="currentColor" stroke-width="1.8">
            <path d="M4 6h16a1 1 0 0 1 1 1v10a1 1 0 0 1-1 1H4a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1Z" />
            <path d="m4 7 8 6 8-6" />
          </svg>
        </div>
        <h3 class="text-xl font-extrabold">{t("emailTitle", "Correo")}</h3>
        <p class="mt-2 text-neutral-700 max-w-sm mx-auto">{t("emailDesc", "Envianos tus consultas y comentarios.")}</p>
        <a href={`mailto:${email}`} class="mt-3 inline-block font-medium underline decoration-neutral-300 hover:decoration-neutral-700">
          {email}
        </a>
      </div>

      <!-- Tel -->
