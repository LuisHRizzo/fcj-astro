---
type FAQItem = { q: string; a: string };
const { heading = "", items = [] } = Astro.props as { heading?: string; items: FAQItem[] };
---

<section class="py-10 md:py-12 bg-white">
  <div class="container mx-auto max-w-7xl px-4">
    {heading && <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">{heading}</h2>}
    <div class="mt-6 space-y-3">
      {items.map((it) => (
        <details class="group rounded-xl border p-4 open:bg-neutral-50">
          <summary class="cursor-pointer text-sm font-semibold list-none flex items-center justify-between">
            <span>{it.q}</span>

            {/* Chevron; si no lo querés, borrá el <svg> de abajo */}
            <svg
              class="h-4 w-4 text-neutral-500 transition-transform group-open:rotate-180"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M5.23 7.21a.75.75 0 011.06.02L10 10.94l3.71-3.71a.75.75 0 111.06 1.06l-4.24 4.24a.75.75 0 01-1.06 0L5.25 8.29a.75.75 0 01-.02-1.08z"
                clip-rule="evenodd"
              />
            </svg>
          </summary>

          <div class="mt-3 text-sm text-neutral-700">
            {it.a}
          </div>
        </details>
      ))}
    </div>
  </div>
</section>
