---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import AuditoriaHistoria from "../../../components/solutions/AuditoriaHistoria.astro";
import ServiciosAuditoria from "../../../components/solutions/ServiciosAuditoria.astro";
import SolucionesAuditoria from "../../../components/solutions/SolucionesAuditoria.astro";
import CapacitacionAuditoria from "../../../components/solutions/CapacitacionAuditoria.astro";
import Involucrate from "../../../components/Involucrate.astro";
import { loadDict, getTrans } from "../../../i18n/utils";
import { getStaticLocalePaths } from "../../../i18n/paths";

export const getStaticPaths = getStaticLocalePaths;

const { lang = "es" } = Astro.params;
const dict = await loadDict(lang);
const t = (k: string, fb?: string) => getTrans(dict, k, fb);

const heroImg = "/assets/auditoria-hero.png";

---
<BaseLayout lang={lang} dict={dict}>
  <!-- HERO -->
  <section class="relative isolate overflow-hidden bg-neutral-900 text-white">
    <div class="container mx-auto max-w-7xl px-4 py-14 sm:py-18 lg:py-20">
      <p class="text-sm font-semibold text-white/80">{t("solutions.auditPlatform.hero.overline")}</p>
      <div class="grid gap-8 md:grid-cols-2 md:items-center">
        <div>
          <h1 class="mt-3 text-4xl sm:text-5xl lg:text-6xl font-extrabold tracking-tight">
            {t("solutions.auditPlatform.hero.title")}
          </h1>
          <p class="mt-5 max-w-2xl text-lg text-white/85">
            {t("solutions.auditPlatform.hero.subtitle")}
          </p>
          <div class="mt-6 flex flex-wrap gap-3">
            <a href={`/${lang}/contacto/`} class="btn btn-primary">
              {t("solutions.auditPlatform.ctas.primary")}
            </a>
            <a href={`/${lang}/recursos/auditoria-resumen.pdf`} class="btn btn-outline">
              {t("solutions.auditPlatform.ctas.secondary")}
            </a>
          </div>
        </div>
        <div class="rounded-2xl border bg-neutral-800/40 overflow-hidden">
          <img src={heroImg} alt={t("solutions.auditPlatform.hero.imgAlt")} class="h-full w-full object-cover" loading="lazy" />
        </div>
      </div>
    </div>
    <div class="h-px w-full bg-white/15"></div>
  </section>

  <!-- MENSAJE CLAVE -->
  <AuditoriaHistoria lang={lang} dict={dict} />


  <!-- PROBLEMA CENTRAL -->
  <ServiciosAuditoria lang={lang} dict={dict}/>

 
  <!-- SOLUCIÃ“N / FUNCIONALIDADES -->
  <SolucionesAuditoria lang={lang} dict={dict} />

  <!-- DIFERENCIAL -->
   <CapacitacionAuditoria lang={lang} dict={dict} />

  <!-- RECURSOS -->
  <!-- <ResourcesList
    {lang} {dict}
    items={[
      { title: t("solutions.auditPlatform.resources.brief"),    href:`/${lang}/recursos/auditoria-resumen.pdf` },
      { title: t("solutions.auditPlatform.resources.ebook"),    href:`/${lang}/recursos/ebook-auditoria.pdf` },
      { title: t("solutions.auditPlatform.resources.checklist"),href:`/${lang}/recursos/checklist-auditoria.docx` }
    ]}
  /> -->

  <Involucrate {lang} {dict} />

</BaseLayout>
