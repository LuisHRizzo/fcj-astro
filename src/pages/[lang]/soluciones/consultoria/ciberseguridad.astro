---
import BaseLayout from "../../../../layouts/BaseLayout.astro";
import { loadDict, getTrans } from "../../../../i18n/utils";
import { getStaticLocalePaths } from "../../../../i18n/paths";

import SolutionsHero from "../../../../components/solutions/SolutionsHero.astro";
import KeyMessage from "../../../../components/solutions/KeyMessage.astro";
import BenefitsGrid from "../../../../components/solutions/BenefitsGrid.astro";
import AudienceBenefits from "../../../../components/solutions/AudienceBenefits.astro";
import TrustBadges from "../../../../components/solutions/TrustBadges.astro";
import ResourcesList from "../../../../components/solutions/ResourcesList.astro";
import LeadFormSecurity from "../../../../components/solutions/LeadFormSecurity.astro";
import CTASection from "../../../../components/solutions/CTASection.astro";

export const getStaticPaths = getStaticLocalePaths;

const { lang = "es" } = Astro.params;
const dict = await loadDict(lang);
const t = (k: string, fb?: string) => getTrans(dict, k, fb);
---

<BaseLayout lang={lang} dict={dict}>
  <!-- HERO -->
  <SolutionsHero
    {lang} {dict}
    overlineKey="solutions.ca.cyber.hero.overline"
    titleKey="solutions.ca.cyber.hero.title"
    subtitleKey="solutions.ca.cyber.hero.subtitle"
    imgSrc="/assets/hero-ciberseguridad.jpg"
    imgAltKey="solutions.ca.cyber.hero.imgAlt"
    primaryCta={{ href: `/${lang}/contacto/`, key: "solutions.ca.cyber.ctas.primary" }}
    secondaryCta={{ href: `/${lang}/recursos/guia-resiliencia-digital.pdf`, key: "solutions.ca.cyber.ctas.secondary" }}
  />

  <!-- MENSAJE CLAVE -->
  <KeyMessage
    {lang} {dict}
    title={t("solutions.ca.cyber.key.title")}
    paragraphs={[
      t("solutions.ca.cyber.key.p1"),
      t("solutions.ca.cyber.key.p2")
    ]}
  />

  <!-- PROPUESTA DE VALOR -->
  <section class="py-10 md:py-12 bg-white">
    <div class="container mx-auto max-w-7xl px-4">
      <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">{t("solutions.ca.cyber.value.heading")}</h2>
      <p class="mt-2 max-w-3xl text-neutral-700">{t("solutions.ca.cyber.value.lead")}</p>

      <!-- SOC / servicios destacados -->
      <div class="mt-8 grid gap-6 md:grid-cols-3">
        <article class="card p-5">
          <h3 class="font-bold">{t("solutions.ca.cyber.soc.s1.title")}</h3>
          <p class="mt-2 text-sm text-neutral-600">{t("solutions.ca.cyber.soc.s1.desc")}</p>
        </article>
        <article class="card p-5">
          <h3 class="font-bold">{t("solutions.ca.cyber.soc.s2.title")}</h3>
          <p class="mt-2 text-sm text-neutral-600">{t("solutions.ca.cyber.soc.s2.desc")}</p>
        </article>
        <article class="card p-5">
          <h3 class="font-bold">{t("solutions.ca.cyber.soc.s3.title")}</h3>
          <p class="mt-2 text-sm text-neutral-600">{t("solutions.ca.cyber.soc.s3.desc")}</p>
        </article>
      </div>
    </div>
  </section>

  <!-- BENEFICIOS CLAVE -->
  <BenefitsGrid
    {lang} {dict}
    heading={t("solutions.ca.cyber.value.heading")}
    items={[
      { title: t("solutions.ca.cyber.benefits.b1.title"), desc: t("solutions.ca.cyber.benefits.b1.desc") },
      { title: t("solutions.ca.cyber.benefits.b2.title"), desc: t("solutions.ca.cyber.benefits.b2.desc") },
      { title: t("solutions.ca.cyber.benefits.b3.title"), desc: t("solutions.ca.cyber.benefits.b3.desc") },
      { title: t("solutions.ca.cyber.benefits.b4.title"), desc: t("solutions.ca.cyber.benefits.b4.desc") }
    ]}
  />

  <!-- BENEFICIOS POR PÚBLICO -->
  <AudienceBenefits
    {lang} {dict}
    items={[
      { audience: t("solutions.ca.cyber.audience.gov.title"),  benefits:[t("solutions.ca.cyber.audience.gov.li1"), t("solutions.ca.cyber.audience.gov.li2"), t("solutions.ca.cyber.audience.gov.li3")] },
      { audience: t("solutions.ca.cyber.audience.min.title"),  benefits:[t("solutions.ca.cyber.audience.min.li1"), t("solutions.ca.cyber.audience.min.li2"), t("solutions.ca.cyber.audience.min.li3")] },
      { audience: t("solutions.ca.cyber.audience.cent.title"), benefits:[t("solutions.ca.cyber.audience.cent.li1"),t("solutions.ca.cyber.audience.cent.li2"),t("solutions.ca.cyber.audience.cent.li3")] },
      { audience: t("solutions.ca.cyber.audience.uni.title"),  benefits:[t("solutions.ca.cyber.audience.uni.li1"), t("solutions.ca.cyber.audience.uni.li2"), t("solutions.ca.cyber.audience.uni.li3")] },
      { audience: t("solutions.ca.cyber.audience.intl.title"), benefits:[t("solutions.ca.cyber.audience.intl.li1"),t("solutions.ca.cyber.audience.intl.li2"),t("solutions.ca.cyber.audience.intl.li3")] }
    ]}
  />

  <!-- CERTIFICACIONES / ALIANZAS -->
  <TrustBadges
    badges={[
      { img:"/assets/badges/iso.jpg",  alt:t("solutions.ca.cyber.badges.iso") },
      { img:"/assets/badges/cra.png",  alt:t("solutions.ca.cyber.badges.cra") },
      { img:"/assets/badges/gdpr.png", alt:t("solutions.ca.cyber.badges.gdpr") }
    ]}
    partners={[
      { img:"/assets/partners/greyhats.png", alt:t("solutions.ca.cyber.partners.greyhats") }
    ]}
  />

  <!-- TESTIMONIO -->
  <section class="py-10 md:py-12 bg-white">
    <div class="container mx-auto max-w-7xl px-4">
      <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">Testimonios</h2>
      <figure class="mt-6 card p-6">
        <blockquote class="text-lg font-semibold leading-relaxed">“{t("solutions.ca.cyber.testimonials.t1.quote")}”</blockquote>
        <figcaption class="mt-4 text-sm text-neutral-600">{t("solutions.ca.cyber.testimonials.t1.author")}</figcaption>
      </figure>
    </div>
  </section>

  <!-- RECURSOS -->
  <ResourcesList
    {lang} {dict}
    items={[
      { title: t("solutions.ca.cyber.resources.r1"), href:`/${lang}/recursos/guia-buenas-practicas-ciber.pdf` },
      { title: t("solutions.ca.cyber.resources.r2"), href:`/${lang}/recursos/estudio-simulacion-recuperacion.pdf` },
      { title: t("solutions.ca.cyber.resources.r3"), href:`/${lang}/recursos/chatbot-ciberresiliencia/` }
    ]}
  />

  <!-- FORMULARIO (Nombre | Email | Sector | Rol) -->
  <LeadFormSecurity
    {lang} {dict}
    formEndpoint="https://formspree.io/f/xxxxxx"             
    mailtoFallback="info@cienciayjusticia.org"
  />

  <!-- CTA FINAL -->
  <CTASection
    {lang} {dict}
    primaryLabel={t("solutions.ca.cyber.ctas.primary")}
    primaryHref={`/${lang}/contacto/`}
    secondaryLabel={t("solutions.ca.cyber.ctas.secondary")}
    secondaryHref={`/${lang}/recursos/guia-resiliencia-digital.pdf`}
  />
</BaseLayout>
