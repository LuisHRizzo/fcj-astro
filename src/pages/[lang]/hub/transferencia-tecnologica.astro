---
import BaseLayout from "../../../layouts/BaseLayout.astro";
import { loadDict, getTrans } from "../../../i18n/utils";
import { getStaticLocalePaths } from "../../../i18n/paths";

import SolutionsHero from "../../../components/solutions/SolutionsHero.astro";
import KeyMessage from "../../../components/solutions/KeyMessage.astro";
import BenefitsGrid from "../../../components/solutions/BenefitsGrid.astro";
import AudienceBenefits from "../../../components/solutions/AudienceBenefits.astro";
import TrustBadges from "../../../components/solutions/TrustBadges.astro";
import ResourcesList from "../../../components/solutions/ResourcesList.astro";
import CTASection from "../../../components/solutions/CTASection.astro";
import AlliancesCarousel from "../../../components/hub/AlliancesCarousel.astro";
import LeadFormLabs from "../../../components/hub/LeadFormLabs.astro"; // reaprovechamos el form, o creamos uno específico luego

export const getStaticPaths = getStaticLocalePaths;

const { lang = "es" } = Astro.params;
const dict = await loadDict(lang);
const t = (k: string, fb?: string) => getTrans(dict, k, fb);

// Placeholder de aliados (reemplaza src/href por los reales)
const alliances = [
  { src: "/assets/partners/upf.png",        alt: "Universitat Pompeu Fabra", href: "#" },
  { src: "/assets/partners/akurat.png",     alt: "Akurat Analytics",         href: "#" },
  { src: "/assets/partners/universities.png", alt: "Universidades EU-LATAM", href: "#" },
  { src: "/assets/partners/admins.png",     alt: "Administraciones públicas", href: "#" }
];
---

<BaseLayout lang={lang} dict={dict}>
  <!-- HERO -->
  <SolutionsHero
    {lang} {dict}
    overlineKey="hub.transfer.hero.overline"
    titleKey="hub.transfer.hero.title"
    subtitleKey="hub.transfer.hero.subtitle"
    imgSrc="/assets/hero-transfer.jpg"
    imgAltKey="hub.transfer.hero.imgAlt"
    primaryCta={{ href: `/${lang}/contacto/`, label: t("hub.transfer.ctas.primary") }}
  />

  <!-- MENSAJE CLAVE -->
  <KeyMessage
    {lang} {dict}
    title={t("hub.transfer.key.title")}
    paragraphs={[
      t("hub.transfer.key.p1"),
      t("hub.transfer.key.p2")
    ]}
  />

  <!-- PROPUESTA DE VALOR -->
  <section class="py-10 md:py-12 bg-white">
    <div class="container mx-auto max-w-7xl px-4">
      <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">{t("hub.transfer.value.heading")}</h2>
      <p class="mt-2 max-w-3xl text-neutral-700">{t("hub.transfer.value.lead")}</p>
    </div>
  </section>

  <!-- CARROUSEL DE ALIANZAS -->
  <AlliancesCarousel
    title={t("hub.transfer.carousel.title")}
    items={alliances}
  />

  <!-- BENEFICIOS CLAVE -->
  <BenefitsGrid
    {lang} {dict}
    heading={t("hub.transfer.value.heading")}
    items={[
      { title: t("hub.transfer.benefits.b1.title"), desc: t("hub.transfer.benefits.b1.desc") },
      { title: t("hub.transfer.benefits.b2.title"), desc: t("hub.transfer.benefits.b2.desc") },
      { title: t("hub.transfer.benefits.b3.title"), desc: t("hub.transfer.benefits.b3.desc") },
      { title: t("hub.transfer.benefits.b4.title"), desc: t("hub.transfer.benefits.b4.desc") },
      { title: t("hub.transfer.benefits.b5.title"), desc: t("hub.transfer.benefits.b5.desc") }
    ]}
  />

  <!-- BENEFICIOS POR PÚBLICO -->
  <AudienceBenefits
    {lang} {dict}
    items={[
      { audience: t("hub.transfer.audience.uni.title"),  benefits:[t("hub.transfer.audience.uni.li1"), t("hub.transfer.audience.uni.li2"), t("hub.transfer.audience.uni.li3")] },
      { audience: t("hub.transfer.audience.ct.title"),   benefits:[t("hub.transfer.audience.ct.li1"),  t("hub.transfer.audience.ct.li2"),  t("hub.transfer.audience.ct.li3")] },
      { audience: t("hub.transfer.audience.pub.title"),  benefits:[t("hub.transfer.audience.pub.li1"), t("hub.transfer.audience.pub.li2"), t("hub.transfer.audience.pub.li3")] },
      { audience: t("hub.transfer.audience.start.title"),benefits:[t("hub.transfer.audience.start.li1"), t("hub.transfer.audience.start.li2"), t("hub.transfer.audience.start.li3")] }
    ]}
  />

  <!-- CERTIFICACIONES / ALIANZAS -->
  <TrustBadges
    badges={[
      { img:"/assets/badges/network.png",  alt:t("hub.transfer.badges.network") },
      { img:"/assets/badges/iso-56002.png", alt:t("hub.transfer.badges.iso56002") }
    ]}
    partners={[
      { img:"/assets/partners/universities.png", alt:t("hub.transfer.partners.universities") },
      { img:"/assets/partners/institutions.png", alt:t("hub.transfer.partners.institutions") }
    ]}
  />

  <!-- TESTIMONIO -->
  <section class="py-10 md:py-12 bg-white">
    <div class="container mx-auto max-w-7xl px-4">
      <h2 class="text-2xl sm:text-3xl font-extrabold tracking-tight">Testimonios</h2>
      <figure class="mt-6 card p-6">
        <blockquote class="text-lg font-semibold leading-relaxed">“{t("hub.transfer.testimonials.t1.quote")}”</blockquote>
        <figcaption class="mt-4 text-sm text-neutral-600">{t("hub.transfer.testimonials.t1.author")}</figcaption>
      </figure>
    </div>
  </section>

  <!-- RECURSOS -->
  <ResourcesList
    {lang} {dict}
    items={[
      { title: t("hub.transfer.resources.r1"), href:`/${lang}/recursos/guia-transferencia.pdf` },
      { title: t("hub.transfer.resources.r2"), href:`/${lang}/recursos/infografia-test-before-invest.pdf` }
    ]}
  />

  <!-- FORMULARIO (reaprovechamos el de Labs para no duplicar lógica) -->
  <LeadFormLabs
    {lang} {dict}
    formEndpoint=""
    mailtoFallback="info@cienciayjusticia.org"
  />

  <!-- CTA FINAL -->
  <CTASection
    {lang} {dict}
    primaryLabel={t("hub.transfer.ctas.primary")}
    primaryHref={`/${lang}/contacto/`}
    
  />
</BaseLayout>
